@model IEnumerable<itproekt.Table>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:darkblue">Сите известувања</h2>
<p></p>
@if (User.IsInRole("Direktor"))
{
    @Html.ActionLink("Додади улога", "AddUsertoRole", "Account")

}

@if (User.IsInRole("Direktor"))
{
    <p></p>
    @Html.ActionLink("Објави ново известување", "UploadBlog", "Blog", new { @class = "btn btn-primary btn-large" })
}



<table style="border-collapse:collapse">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <p></p>
                <b style="color:brown; font-size:large">@Html.DisplayFor(modelItem => item.Btitle)</b>
                <p></p>
            </td>
        </tr>
        <tr>
            <td>
                Категорија: <strong style="color:brown">@Html.DisplayFor(modelItem => item.BCategory)</strong>
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BDesc)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BPa)
                <p></p>
            </td>
        </tr>
    }

</table>
