@model itproekt.Models.AddtoRoleModel

@{
    ViewBag.Title = "AddUsertoRole";
}

<h2>Додели му улога на лицето</h2>
@using(Html.BeginForm("AddUsertoRole", "Account"))
            {
                <div class="form-group">
                    @Html.LabelFor(z=>z.Email)
                    @Html.TextBoxFor(m=>m.Email, new { @class="form-control"})
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(z=>z.SelectedRole, new SelectList(Model.Roles), new {@class="form-control"})
                </div>
                <button type="submit" class="btn btn-default" >Зачувај</button>
            }
